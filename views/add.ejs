<%- include('partials/_header.ejs') %>
<body>
  <!-- Navbar -->
  <%- include('partials/_navbar.ejs') %>
  
  <!-- İçerik -->
  <div class="container-fluid">
    <div id="content" class="mx-auto tm-content-container">
      <main>
        <div class="row">
          <div class="col-12">
            <center><h2 class="tm-page-title mb-4">Yeni Fotoğraf Ekle</h2></center>
            
            <div class="row tm-contact-content">
              <div class="col-md-8 mx-auto">
                <form action="/photos" method="POST" enctype="multipart/form-data" class="tm-contact-form">
                  
                  <div class="form-group">
                    <label for="title">Başlık</label>
                    <input 
                      type="text" 
                      name="title" 
                      id="title"
                      class="form-control" 
                      placeholder="Fotoğraf başlığı" 
                      required
                    >
                  </div>

                  <div class="form-group">
                    <label for="description">Açıklama</label>
                    <textarea 
                      name="description" 
                      id="description"
                      class="form-control" 
                      rows="5" 
                      placeholder="Fotoğraf açıklaması" 
                      required
                    ></textarea>
                  </div>

                  <div class="form-group">
                    <label for="image">Fotoğraf Seç</label>
                    <input 
                      type="file" 
                      name="image" 
                      id="image"
                      accept="image/*" 
                      class="form-control" 
                      required
                    >
                  </div>

                  <div class="text-right">
                    <a href="/" class="btn btn-secondary mr-2">İptal</a>
                    <button type="submit" class="btn btn-primary tm-btn-animate tm-btn-submit">
                      <span>Kaydet</span>
                    </button>
                  </div>
                  
                </form>
              </div>
            </div>

          </div>
        </div>
      </main>

      <!-- Footer -->
      <%- include('partials/_footer.ejs') %>
    </div>
  </div>

  <!-- Scripts -->
  <script src="js/jquery-3.4.1.min.js"></script>
  <script src="js/bootstrap.min.js"></script>
</body>
</html>